body
    margin 0
    padding 0
    width 100%
h1
  color red
.clearfix
   margin-left 15px
   margin-right 15px
.row
  width 100%
.menu
    padding-top 20px
.menu ul li
  list-style none
.menu ul
  display flex
  justify-content space-between
  width 100%
.menu ul li a
  padding  10px 30px 10px 30px
  color black
  border-radius 23px
  border 1px solid #62728c
  text-decoration none
  font-family monospace
  font-size 15px
  transition 0.3s ease
.menu ul li a:hover
  background #62728c
  color white
.link-shopcart
      text-decoration none
      padding 0 !important
      border none !important
      border-radius 0 !important
.link-shopcart:hover
    background none !important
    color black !important
.form-filter
  width 100%
  display -webkit-inline-box
.margin-top-25
     margin-top 25px
.margin-left-40
     margin-left 40px
.padd-0
    padding 0
.padd-8
    padding 8px
.margin-top-30
    margin-top 30px

.shop-cart
    border 2px solid gray
.total-products
    float right
    margin-right 28px
    margin-top 37px
    font-size 20px
.link-checkout
  margin-right 87px
  text-decoration none
  border 1px solid #27561b
  padding 10px
  border-radius 21px
  color #27561b
  transition .3s ease
  font-family Roboto
  margin-top 11px
.link-checkout:hover
  text-decoration none
  color white
  background #27561b

.book-price
  line-height 158px
